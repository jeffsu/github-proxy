each m in milestones
  table(width="100%")
    tr
      td(colspan=2): a(href="https://github.com/#{u}/#{r}/issues?milestone=#{m.number}&state=open")= m.title
    tr
      td(style="background-color:green; width: #{m.closed_issues/(m.closed_issues+m.open_issues)*100}%; height: 3px") 
      td(style="background-color:black; width: #{m.open_issues/(m.closed_issues+m.open_issues)*100}%")
